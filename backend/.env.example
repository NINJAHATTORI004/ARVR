# ARVA Backend Configuration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=*

# QIE Blockchain Configuration
QIE_RPC_URL=http://127.0.0.1:8545
NETWORK_NAME=QIE Testnet

# Smart Contract Address (deployed ARVA_AssetNFT)
# Update this after deploying the contract
CONTRACT_ADDRESS=

# Optional: Wallet for write operations
WALLET_PRIVATE_KEY=

# IPFS Configuration (optional)
IPFS_GATEWAY=https://ipfs.io/ipfs/
